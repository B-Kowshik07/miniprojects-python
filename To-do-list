tasks = []

def show_menu():
    print("\n=== ğŸ“ To-Do List Menu ===")
    print("1. View Tasks")
    print("2. Add Task")
    print("3. Mark Task as Done")
    print("4. Delete Task")
    print("5. Exit")

def view_tasks():
    if not tasks:
        print("âœ… No tasks found.")
        return
    print("\nğŸ—‚ï¸ Your Tasks:")
    for idx, task in enumerate(tasks, 1):
        status = "âœ”ï¸" if task["done"] else "âŒ"
        print(f"{idx}. {task['name']} [{status}]")

def add_task():
    name = input("Enter task name: ")
    tasks.append({"name": name, "done": False})
    print("Task added!")

def mark_done():
    view_tasks()
    try:
        idx = int(input("Enter task number to mark as done: ")) - 1
        tasks[idx]["done"] = True
        print("Task marked as done.")
    except (IndexError, ValueError):
        print("âš ï¸ Invalid task number.")

def delete_task():
    view_tasks()
    try:
        idx = int(input("Enter task number to delete: ")) - 1
        removed = tasks.pop(idx)
        print(f"Deleted task: {removed['name']}")
    except (IndexError, ValueError):
        print("âš ï¸ Invalid task number.")

if __name__ == "__main__":
    while True:
        show_menu()
        choice = input("Choose an option (1-5): ")

        if choice == "1":
            view_tasks()
        elif choice == "2":
            add_task()
        elif choice == "3":
            mark_done()
        elif choice == "4":
            delete_task()
        elif choice == "5":
            print("Bye! ğŸ‘‹")
            break
        else:
            print("Invalid choice. Try again.")
